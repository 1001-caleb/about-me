---
import Layout from "../layouts/Layout.astro";
import Github from "../assets/github.svg";
import Linkedin from "../assets/link.svg";
import Briefcase from "../assets/briefcase.svg";
import Twitter from "../assets/twitter.svg";
---

<Layout title="About Parra">
  <div class="hero min-h-screen">
    <div class="hero-content text-center">
      <div class="max-w-lg">
        <h1 class="text-2xl 2xl:text-6xl lg:text-5xl font-bold">Hi there,</h1>
        <h2
          class="text-2xl 2xl:text-6xl lg:text-5xl font-bold flex align-middle justify-center"
        >
          <div
            class="bg-gradient-to-r from-blue-700 to-violet-600 text-transparent bg-clip-text"
          >
            I'm Caleb Parra
          </div>
          <div class="animate-waving-hand">ğŸ‘‹ğŸ¾</div>
        </h2>

        <p class="py-6 text-sm md:text-xl 2xl:text-2xl">
          Software developer with knowledgeable in developing software solutions
          with web and native technologies, from the initial to the final stage.
        </p>
        <p class="badge badge-outline badge-warning">Cloud enthusiast</p>
        <p class="badge badge-outline badge-success">Content creator</p>
        <p class="badge badge-outline badge-accent">CEO of G4A</p>

        <div class="flex gap-3 mt-10 justify-center align-middle text-center">
          <a
            href="https://github.com/1001-caleb"
            class="tooltip"
            data-tip="Github"
          >
            <img src={Github} alt="" />
          </a>
          <a
            href="https://www.linkedin.com/in/caleb-parra/"
            class="tooltip"
            data-tip="linkedin"
          >
            <img src={Linkedin} alt="" width="23px" class="invert" />
          </a>
          <a
            href="https://portafolio-parra.vercel.app/"
            class="tooltip"
            data-tip="Briefcase"
          >
            <img src={Briefcase} alt="" width="23px" class="invert" />
          </a>
          <a
            href="https://twitter.com/ParraCode_"
            class="tooltip"
            data-tip="Twitter"
          >
            <img src={Twitter} alt="" width="24px" class="invert" />
          </a>
        </div>
      </div>
    </div>
  </div>
</Layout>
